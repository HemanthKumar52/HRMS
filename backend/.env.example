NODE_ENV=development

# Database - Use either local PostgreSQL or Prisma Accelerate
# Local PostgreSQL:
# DATABASE_URL=postgresql://hrms:hrms_secret@localhost:5432/hrms
# Prisma Accelerate (Cloud):
DATABASE_URL=prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_PRISMA_ACCELERATE_API_KEY

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
